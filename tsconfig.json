    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}